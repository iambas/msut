<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.darker.motorservice.ui.update_image.UpdateImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_edit_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_edit_white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/bg_teal"
            android:onClick="onSelImgClicked"
            android:paddingEnd="@dimen/btn"
            android:paddingStart="@dimen/btn"
            android:text="@string/sel_img"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_teal"
            android:onClick="onSaveClicked"
            android:paddingEnd="@dimen/btn"
            android:paddingStart="@dimen/btn"
            android:text="@string/save"
            android:textColor="@color/white" />

    </LinearLayout>

    <include layout="@layout/progressbar" />

</RelativeLayout>

